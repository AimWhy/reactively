{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["cypress"],
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "paths": {
      "@reactively/core": ["../core/src/core"],
      "@reactively/decorate": ["../decorate/src/decorate"],
      "@reactively/lit": ["../lit/src/lit"],
      "@reactively/wrap": ["../wrap/src/wrap"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "../test/src/util/**/*.ts"]
}
